root = true

# Default settings for all files.
[*]
charset = utf-8
end_of_line = lf
indent_size = tab
indent_style = space
insert_final_newline = true
max_line_length = off
tab_width = 2
trim_trailing_whitespace = true

# Markdown.
# 4 spaces are required for indentation.
# 2 trailing spaces indicate a line break.
[*.md]
indent_size = tab
indent_style = space
tab_width = 4
trim_trailing_whitespace = false
